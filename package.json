{
  "name": "@internet/dom",
  "version": "0.1.0",
  "description": "dom utilities",
  "source": "index.js",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "test": "tape -r esm test/index.js | tap-spec",
    "lint": "eslint index.js test/**",
    "demo": "microbundle watch -i demo/demo.js -f umd -o demo --target browser & light-server -s demo -p 8080 -w demo/**/*",
    "demo:deploy": "ncp docs demo/docs && ghp demo -f && rimraf demo/docs",
    "docs": "rimraf docs && jsdoc -c .jsdoc.json",
    "docs:serve": "light-server -s docs -p 8080 -w docs/**/*",
    "prepublishOnly": "npm run lint && npm run test && npm run docs && npm run demo:deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pqml/dom.git"
  },
  "keywords": [
    "dom"
  ],
  "author": "pqml",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pqml/dom/issues"
  },
  "homepage": "https://github.com/pqml/dom#readme",
  "devDependencies": {
    "docdash": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "esm": "^3.0.84",
    "ghp": "^1.3.1",
    "jsdoc": "^3.5.5",
    "light-server": "^2.5.1",
    "microbundle": "^0.6.0",
    "ncp": "^2.0.0",
    "raf": "^3.4.0",
    "rimraf": "^2.6.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "tape-promise": "^3.0.0"
  },
  "dependencies": {
    "@internet/raf": "^0.1.3"
  }
}
